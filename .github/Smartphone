public class Smartphone {
    // Atributos
    private String marca;
    private String modelo;
    private double precio;
    private int almacenamiento; // Almacenamiento interno;
    private int memoriaRam; // memoria RAM

    // Constructor
    public Smartphone(String marca, String modelo, double precio, int almacenamiento, int memoriaRam) {
        this.marca = marca;
        this.modelo = modelo;
        this.precio = precio;
        this.almacenamiento = almacenamiento;
        this.memoriaRam = memoriaRam;
    }

    // Metodos getters
    public String getMarca() {
        return marca;
    }

    public String getModelo() {
        return modelo;
    }

    public double getPrecio() {
        return precio;
    }

    public int getAlmacenamiento() {
        return almacenamiento;
    }

    public int getMemoriaRam() {
        return memoriaRam;
    }

    // Metodos setters
    public void setMarca(String nuevaMarca) {
        this.marca = nuevaMarca;
    }

    public void setModelo(String nuevoModelo) {
        this.modelo = nuevoModelo;
    }

    public void setPrecio(double nuevoPrecio) {
        this.precio = nuevoPrecio;
    }

    public void setAlmacenamiento(int nuevoAlmacenamiento) {
        this.almacenamiento = nuevoAlmacenamiento;
    }

    public void setMemoriaRam(int nuevaMemoriaRam) {
        this.memoriaRam = nuevaMemoriaRam;
    }

    // Metodo para actualizar almacenamiento
    public void actualizarAlmacenamiento(int nuevoAlmacenamiento) {
        if (nuevoAlmacenamiento > 0) {
            this.almacenamiento = nuevoAlmacenamiento;
            System.out.println("Almacenamiento interno actualizado a: " + nuevoAlmacenamiento + " GB");
        } else {
            System.out.println("¡La RAM no puede ser menor a 0!")
        }
    }

    // Metodo para aplicar descuento
    public void aplicarDescuento(double porcentaje) {
        if (porcentaje > 0 && porcentaje <= 100) {
            precio = precio - (precio * porcentaje / 100);
            System.out.println("Precio actualizado a: $" + precio);
        } else {
            System.out.println("¡¡¡Descuento Invalido!!!");
        }
    }

    // Metodo para mostrar informacion
    public void mostrarInformacion() {
        System.out.println("Dispositivo: " + marca);
        System.out.println("Modelo: " + modelo);
        System.out.println("Precio: $" + precio);
        System.out.println("Almacenamiento interno: " + almacenamiento + " GB");
        System.out.printlm("Memoria RAM: " + memoriaRam + " GB");
    }

    // Metodo para comparar almacenamiento con otro Smartphone
    public Smartphone mayorAlmacenamiento(Smartphone celu) {
        if (this.almacenamiento > celu.getAlmacenamiento) {
            return this;
        } else {
            return celu;
        }
    }
}
